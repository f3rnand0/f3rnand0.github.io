{{outlet}}
<div class="container">
  <div class="form-area">
    <form id="gform" {{action "sendEmail" on="submit"}}>
      {{#if mailProcessFailed}}
        <div class="col-md-6 col-md-offset-3 mailSentMessage">Existieron problemas al enviar su correo.</div>
      {{/if}}
      <div class="col-md-6">
        <div class="form-group">
          <label for="name">
            Nombres y Apellidos</label>
          {{input value=name type="text" name="name" placeholder="" class="form-control" required="required"}}
          <!--<input type="text" class="form-control" id="name" name="name" placeholder="" required="required" />-->
        </div>
        <div class="form-group">
          <label for="email">
            Correo electr&oacute;nico</label>
          <div class="input-group">
            <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span>
            </span>
            {{input value=email type="text" name="email" placeholder="" class="form-control" required="required"}}
            <!--input type="email" class="form-control" id="email" name="email" placeholder="" required="required" /-->
          </div>
        </div>
        <div class="form-group">
          <label for="subject">
            Asunto</label>
          {{input value=subject type="text" name="subject" placeholder="" class="form-control" required="required"}}
          <!--input type="text" class="form-control" id="subject" name="subject" placeholder="" required="required" /-->
          <!-- <select id="subject" name="subject" class="form-control" required="required">
                                <option value="na" selected="">Choose One:</option>
                                <option value="service">General Customer Service</option>
                                <option value="suggestions">Suggestions</option>
                                <option value="product">Product Support</option>
                            </select> -->
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="name">
            Mensaje</label>
          {{textarea value=message name="message" placeholder="" class="form-control" rows="9" cols="25" required="required"}}
          <!--textarea name="message" id="message" class="form-control" rows="9" cols="25" required="required" placeholder=""></textarea-->
        </div>
      </div>
      <div class="col-md-12">
        <button type="submit" class="btn btn-primary pull-right btnSendMail" id="btnContactUs" disabled= {{isProcessing}}>
          Enviar Mensaje</button>
      </div>
    </form>
  </div>
</div>
